    <section class="col-md-12">
        <div class="container">
            <div class="thong-tin">
                <form class="ngaydi">
                    <label for="ngay_di">Select day to use</label>
                    <input type="date" id="ngay_di" name="ngay_di" value="<%= datePicker %>" onchange="handler();">
